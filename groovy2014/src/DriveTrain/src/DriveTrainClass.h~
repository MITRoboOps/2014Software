#include <ros/ros.h>
#include <ros/node_handle.h>
#include "std_msgs/String.h"
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <iostream>
#include <sensor_msgs/Joy.h>
#include "RobotechMotor.h"

class DriveTrainClass {

private:
    // Node Handler
    ros::NodeHandle nh;

    // Subscribers
    ros::Subscriber leftSub;
    ros::Subscriber rightSub;

    // Publishers
    ros::Publisher pointPub;

    // Messages
    sensor_msgs::Joy joy;
 


public:

    DriveTrainClass(std::string BLPath, std::string BRPath, std::string FLPath, std::string FRPath);


    RobotechMotor *BR;
    RobotechMotor *BL;
    RobotechMotor *FR;
    RobotechMotor *FL;

// Callbacks
    void leftCallBack( const std_msgs::String::ConstPtr& msg );
    void rightCallBack( const std_msgs::String::ConstPtr& msg );
	
   

};
